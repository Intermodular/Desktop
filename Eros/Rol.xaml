<Window x:Class="Eros.Rol"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eros"
        mc:Ignorable="d"
        Title="Rol" Height="300" Width="600" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Grid>
        <Border BorderBrush="LightGray" BorderThickness="5">
            <StackPanel>
                <Button Width="30" Height="30" HorizontalAlignment="Right" BorderThickness="0" Background="Transparent" Style="{StaticResource btn_cerrar}" Click="Button_Click">
                    <Image Source="/cerrar.png"></Image>
                </Button>
                <Label FontSize="30" HorizontalAlignment="Center" Margin="0,30,0,0" Content="¿En qué modo quieres acceder?" Style="{StaticResource Title}"></Label>
                <Button Content="Administrador" HorizontalAlignment="Left" Width="150" Height="60" Margin="100,70,0,0" Style="{StaticResource TabButton}" Click="Button_Click_2"></Button>
                <Button Content="Cobrador" HorizontalAlignment="Right" Width="150" Height="60" Margin="0,-60,100,0" Style="{StaticResource TabButton}" Click="Button_Click_1"></Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>

                <StackPanel Grid.Row="1" x:Name="spNewEspecification">
                    <Label Content="Escriba la nueva especificación" HorizontalAlignment="Center" FontSize="20" Style="{StaticResource Title}" Height="50" Margin="0,0,0,0"></Label>

                    <TextBox Grid.Column="0" Width="200" Height="30" Margin="0,0,0,70" Style="{StaticResource txb}" VerticalContentAlignment="Center" x:Name="tbEspecification" Padding="5,0,0,0"  MaxLength="18" BorderThickness="2"></TextBox>
                    <TextBlock IsHitTestVisible="False" Text="Especificación" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="250,-170,0,0" Foreground="DarkGray">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=tbEspecification}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Content="Cancelar" Width="102" Height="36" Margin="10,20,0,0" Style="{StaticResource TabButton}" HorizontalAlignment="Left" Click="Button_Click_1"/>
                    <Button Content="Añadir especificación" Width="102" Height="36" Margin="0,-30,20,0" Style="{StaticResource TabButton}"  HorizontalAlignment="Right" Click="Button_Click_2"/>
                </StackPanel>


                <StackPanel Grid.Row="1" x:Name="spEditEspecification">
                    <Label Content="Escriba el nuevo nombre de la especificación" HorizontalAlignment="Center" FontSize="20" Style="{StaticResource Title}" Height="50" Margin="0,0,0,0"></Label>

                    <TextBox Grid.Column="0" Width="200" Height="30" Margin="0,0,0,70" Style="{StaticResource txb}" VerticalContentAlignment="Center" x:Name="tbEditEspecification" Padding="5,0,0,0"  MaxLength="18" BorderThickness="2"></TextBox>
                    <TextBlock IsHitTestVisible="False" Text="Especificación" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="250,-170,0,0" Foreground="DarkGray" x:Name="tbHolderEditEspecification">
                        <TextBlock.Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=tbEditEspecification}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <Button Content="Cancelar" Width="102" Height="36" Margin="10,20,0,0" Style="{StaticResource TabButton}" HorizontalAlignment="Left" Click="Button_Click_1"/>
                    <Button Content="Guardar especificación" Width="102" Height="36" Margin="0,-30,20,0" Style="{StaticResource TabButton}"  HorizontalAlignment="Right" Click="Button_Click_3"/>

                </StackPanel>
                <StackPanel Grid.Row="2" x:Name="spDefaultButtons">
                    <Button Content="Descartar cambios" Width="102" Height="36" Margin="10,0,0,0" Style="{StaticResource TabButton}" Click="Button_Click" HorizontalAlignment="Left"/>
                    <Button Content="Crear especificación" Width="102" Height="36" Margin="10,-36,120,0" Style="{StaticResource TabButton}" HorizontalAlignment="Right" x:Name="btnNewEspecification" Click="btnNewEspecification_Click"/>
                    <Button Content="Guardar cambios" HorizontalAlignment="Right" Width="102" Height="36" Margin="0,-36,10,0" Style="{StaticResource TabButton}" x:Name="btnAddEspecification" Click="btnAddEspecification_Click"></Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>

        mc:Ignorable="d"
         Title="Rol" Height="400" Width="700" WindowStyle="None" WindowStartupLocation="CenterScreen" AllowsTransparency="True">
    <Grid>
        <Border BorderBrush="LightGray" BorderThickness="5">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.3*"></RowDefinition>
                    <RowDefinition Height="1*"></RowDefinition>
                    <RowDefinition Height="0.3*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label FontSize="30" HorizontalAlignment="Center" Margin="0,10,0,0" Content="Edición de especificaciones" Style="{StaticResource Title}" Grid.Row="0"></Label>
                <Button Width="30" Height="30" HorizontalAlignment="Right" BorderThickness="0" Background="Transparent" Style="{StaticResource btn_cerrar}" Click="Button_Click" Margin="0,-15,5,0">
                    <Image Source="./../../Img/icons/cerrar.png"></Image>
                </Button>
                <Grid Grid.Row="1" Margin="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <ListView Name="lvEspecification" Visibility="Visible" SelectionChanged="lvEspecification_SelectionChanged_1" Grid.Column="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Especificación"/>

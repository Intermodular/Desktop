                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Button Grid.Column="1" Content="Edit" x:Name="btnEditEspecification" Click="btnEditIngredient_Click"  Style="{StaticResource TabButton}" HorizontalAlignment="Right"  Width="102" Height="36" Margin="0,-60,30,0">
                        <!--<Image Name="imgEdit" Source="/Administrador/UtilWindows/edit.png" Width="10" Height="10" Visibility="Hidden"/>-->
                    </Button>
                    <Button Grid.Column="1" Content="Delete" x:Name="btnDeleteEspecification" Click="btnDeleteEspecification_Click"  Style="{StaticResource TabButton}" HorizontalAlignment="Right" Width="102" Height="36"  Margin="0,60,30,0">
                        <!--<Image Name="imgBrush" Source="/Administrador/UtilWindows/basura.png" Width="10" Height="10"/>-->
                    </Button>
                </Grid>
